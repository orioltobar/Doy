<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/green</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="App" parent="@android:style/Widget" />

    <style name="App.Toolbar" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/raleway_semibold</item>
        <item name="android:textSize">@dimen/text_size_m</item>
        <item name="android:textColor">@color/grayStrong</item>
        <item name="android:layout_gravity">center</item>
    </style>
    
    <style name="App.LineProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/margin_medium</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">@color/colorPrimary</item>
    </style>

    <style name="App.CircleProgressBar">
        <item name="android:layout_width">@dimen/loading_progress_size</item>
        <item name="android:layout_height">@dimen/loading_progress_size</item>
    </style>

    <style name="App.Intro">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_m</item>
        <item name="android:fontFamily">@font/raleway_extrabold</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="App.TitleL">
        <item name="android:textSize">@dimen/text_size_l</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textColor">@color/grayStrong</item>
    </style>

    <style name="App.TitleXl">
        <item name="android:textSize">@dimen/text_size_xl</item>
        <item name="android:fontFamily">@font/raleway_extrabold</item>
        <item name="android:textColor">@color/grayStrong</item>
    </style>

    <style name="App.TitleXxl">
        <item name="android:textSize">@dimen/text_size_xxl</item>
        <item name="android:fontFamily">@font/raleway_extrabold</item>
        <item name="android:textColor">@color/grayStrong</item>
    </style>

    <style name="App.Input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_m</item>
        <item name="android:textColorHint">@color/hintGray</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:layout_marginBottom">@dimen/margin_xsmall</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="App.Input.Hint">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_s</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
    </style>

    <style name="App.Input.Edit">
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="App.Intro.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">56dp</item>
    </style>

    <style name="App.PrimaryButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_m</item>
        <item name="android:fontFamily">@font/raleway_extrabold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/primary_button_bg</item>
        <item name="android:padding">@dimen/margin_button</item>
    </style>

    <style name="App.AddService">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_xl</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
    </style>

    <style name="App.AddService.ImageBox">
        <item name="android:layout_width">@dimen/dashed_box_width</item>
        <item name="android:layout_height">@dimen/dashed_box_height</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_dashed_rectangle</item>
    </style>

    <style name="App.AddService.Button">
        <item name="android:textSize">@dimen/text_size_m</item>
        <item name="android:fontFamily">@font/raleway_extrabold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/filled_button_bg</item>
    </style>

    <style name="App.ServiceDetail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_m</item>
        <item name="android:textColor">@color/grayStrong</item>
        <item name="android:fontFamily">@font/raleway</item>
    </style>

    <style name="App.ServiceDetail.Title">
        <item name="android:textSize">@dimen/text_size_xxl</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
    </style>

    <style name="App.ServiceDetail.Data">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="App.ServiceDetail.Response">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
    </style>

    <style name="ErrorTheme" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/raleway</item>
    </style>

</resources>
