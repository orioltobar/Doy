<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/category_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/selectableItemBackground"
    android:elevation="@dimen/cardview_default_elevation"
    android:foreground="?attr/selectableItemBackground"
    android:maxHeight="@dimen/category_max_height">

    <ImageView
        android:id="@+id/categoryImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/category_item_bg"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@id/category_container"
        app:layout_constraintEnd_toEndOf="@id/category_container"
        app:layout_constraintStart_toStartOf="@id/category_container"
        app:layout_constraintTop_toTopOf="@id/category_container"
        tools:src="@drawable/image_bg_small" />

    <View
        android:id="@+id/categoryOpacity"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.2"
        android:background="@drawable/bg_category_opacity"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/category_container"
        app:layout_constraintEnd_toEndOf="@id/category_container"
        app:layout_constraintStart_toStartOf="@id/category_container"
        app:layout_constraintTop_toTopOf="@id/category_container"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/categoryText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/raleway_bold"
        android:gravity="center"
        android:padding="@dimen/padding_small"
        android:textColor="@android:color/white"
        android:textSize="@dimen/category_text_size"
        app:layout_constraintBottom_toBottomOf="@id/category_container"
        app:layout_constraintEnd_toEndOf="@id/category_container"
        app:layout_constraintStart_toStartOf="@id/category_container"
        app:layout_constraintTop_toTopOf="@id/category_container"
        tools:text="ConversaciÃ³n" />

    <ImageView
        android:id="@+id/tickImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_small"
        android:src="@drawable/ic_tickon_white"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
